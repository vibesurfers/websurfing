# Auth (required in production, optional in development)
AUTH_SECRET=""
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Database (required in production, optional in development)
DATABASE_URL=""

# Vertex AI / Gemini Configuration
GOOGLE_CLOUD_PROJECT="YOUR_PROJECT_ID"
GOOGLE_CLOUD_LOCATION="us-central1"

# Credentials as JSON string (works for both local and Vercel)
# To get this value: gcloud auth application-default login, then cat ~/.config/gcloud/application_default_credentials.json | jq -c '.'
GOOGLE_CREDENTIALS_JSON={"type":"authorized_user","client_id":"...","client_secret":"...","refresh_token":"...","universe_domain":"googleapis.com"}

# Note: Use same JSON for both local development and Vercel deployment
# This is simpler than managing separate file paths