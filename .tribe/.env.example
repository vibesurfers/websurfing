# Tiptap Table Application - Environment Variables

# ============================================
# Frontend Configuration
# ============================================

# No specific frontend env vars required for basic Tiptap setup
# Add your API endpoints if using backend integration:
# VITE_API_URL=http://localhost:3000
# VITE_WS_URL=ws://localhost:3000

# ============================================
# Backend Configuration (Node.js)
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# ============================================
# Database Configuration (Neon PostgreSQL)
# ============================================

# Neon Database Connection
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/dbname?sslmode=require

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis Configuration (for BullMQ Queue)
# ============================================

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URL (alternative to individual settings)
# REDIS_URL=redis://localhost:6379

# ============================================
# Queue Configuration (BullMQ)
# ============================================

# Queue Settings
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Worker Configuration
WORKER_POOL_SIZE=5

# ============================================
# WebSocket Configuration (Socket.io)
# ============================================

# WebSocket Settings
WS_CORS_ORIGIN=http://localhost:5173
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# ============================================
# Authentication (if implementing auth)
# ============================================

# JWT Configuration
# JWT_SECRET=your-secret-key-change-this-in-production
# JWT_EXPIRES_IN=7d

# Session Configuration
# SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================
# Logging Configuration
# ============================================

# Winston Log Level
LOG_LEVEL=debug

# Log File Paths
LOG_FILE_ERROR=./logs/error.log
LOG_FILE_COMBINED=./logs/combined.log

# ============================================
# API Rate Limiting
# ============================================

# Rate Limit Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Monitoring & Observability
# ============================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# ============================================
# Development Tools
# ============================================

# Enable Debug Mode
DEBUG=false

# Hot Reload
HOT_RELOAD=true

# ============================================
# Production Optimizations
# ============================================

# Enable Compression
ENABLE_COMPRESSION=true

# Enable CORS
CORS_ENABLED=true
CORS_ORIGIN=*

# Trust Proxy (for Kubernetes/Docker)
TRUST_PROXY=false

# ============================================
# External APIs (if using)
# ============================================

# Example: AI API for formula evaluation
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# File Storage (if using)
# ============================================

# Local Storage Path
# UPLOAD_DIR=./uploads

# S3 Configuration (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=tiptap-tables

# ============================================
# Email Notifications (optional)
# ============================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password

# ============================================
# Feature Flags
# ============================================

# Enable/Disable Features
ENABLE_ROBOT_AGENTS=true
ENABLE_EVENT_REPLAY=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_FORMULA_ENGINE=true

# ============================================
# Security
# ============================================

# HTTPS Configuration
# SSL_CERT_PATH=./certs/cert.pem
# SSL_KEY_PATH=./certs/key.pem

# Content Security Policy
# CSP_DIRECTIVES=default-src 'self'

# ============================================
# Docker/Kubernetes Configuration
# ============================================

# Container Settings
# CONTAINER_NAME=tiptap-backend
# NETWORK_NAME=tiptap-network
